# Server Configuration
PORT=5000
NODE_ENV=development
HOST=0.0.0.0
CLIENT_URL=http://localhost:5173

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/blood-donation-db?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d
JWT_COOKIE_EXPIRE=7

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
FIREBASE_APP_ID=your_app_id

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ImageBB Configuration (for avatar uploads)
IMAGEBB_API_KEY=your_imagebb_api_key
IMAGEBB_BASE_URL=https://api.imgbb.com/1/upload

# Email Configuration (optional - for future features)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password
EMAIL_FROM=Blood Donation App <noreply@blooddonation.com>

# Rate Limiting
RATE_LIMIT_WINDOW_MS=15 * 60 * 1000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000,https://your-app.vercel.app

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600 # 1 hour in seconds

# Logging
LOG_LEVEL=info

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_change_this